{
  "name": "reactjs-boilerplate",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:e2e": "cp -n example.env.local .env.local && next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "is-ci || husky",
    "release": "release-it",
    "generate:resource": "hygen generate resource",
    "postgenerate:resource": "npm run lint -- --fix",
    "generate:field": "hygen generate field",
    "postgenerate:field": "npm run lint -- --fix",
    "sb": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@faker-js/faker": "^9.8.0",
    "@fontsource/roboto": "^5.2.6",
    "@hookform/resolvers": "^5.1.1",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@mui/x-date-pickers": "^8.5.2",
    "@react-oauth/google": "^0.12.2",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@types/node": "24.0.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "accept-language": "^3.0.20",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "eslint": "8.57.1",
    "eslint-config-next": "15.4.2",
    "i18next": "25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-resources-to-backend": "^1.2.1",
    "js-cookie": "^3.0.5",
    "mui-tiptap": "^1.18.1",
    "nanoid": "^5.1.5",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.57.0",
    "react-i18next": "^15.5.3",
    "react-toastify": "^11.0.5",
    "react-virtuoso": "4.13.0",
    "typescript": "5.8.3",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.53.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@storybook/addon-essentials": "^8.1.10",
    "@storybook/addon-interactions": "^8.1.10",
    "@storybook/addon-links": "^9.0.0",
    "@storybook/addon-onboarding": "^9.0.0",
    "@storybook/blocks": "^8.1.10",
    "@storybook/nextjs": "^9.0.0",
    "@storybook/react": "^9.0.0",
    "@storybook/test": "^8.1.10",
    "@types/js-cookie": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-storybook": "^9.0.0",
    "husky": "^9.1.7",
    "hygen": "^6.2.11",
    "is-ci": "^4.1.0",
    "prettier": "^3.5.3",
    "release-it": "^17.1.1",
    "storybook": "^9.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            }
          ]
        }
      }
    }
  },
  "overrides": {
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6"
  }
}
