{
  "name": "reactjs-boilerplate",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:e2e": "cp -n example.env.local .env.local && next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "is-ci || husky",
    "release": "release-it",
    "generate:resource": "hygen generate resource",
    "postgenerate:resource": "npm run lint -- --fix",
    "generate:field": "hygen generate field",
    "postgenerate:field": "npm run lint -- --fix",
    "sb": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@faker-js/faker": "9.9.0",
    "@fontsource/roboto": "5.2.6",
    "@hookform/resolvers": "5.2.1",
    "@mui/icons-material": "7.3.1",
    "@mui/material": "7.3.1",
    "@mui/x-date-pickers": "8.10.2",
    "@react-oauth/google": "0.12.2",
    "@tanstack/react-query": "5.85.5",
    "@tanstack/react-query-devtools": "5.85.5",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "accept-language": "3.0.20",
    "date-fns": "3.6.0",
    "dotenv": "16.5.0",
    "eslint": "8.57.1",
    "eslint-config-next": "15.5.1",
    "i18next": "25.4.2",
    "i18next-browser-languagedetector": "8.2.0",
    "i18next-resources-to-backend": "1.2.1",
    "js-cookie": "3.0.5",
    "mui-tiptap": "1.23.0",
    "nanoid": "5.1.5",
    "next": "15.5.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-dropzone": "14.3.8",
    "react-hook-form": "7.62.0",
    "react-i18next": "15.7.2",
    "react-toastify": "11.0.5",
    "react-virtuoso": "4.14.0",
    "typescript": "5.9.2",
    "yup": "1.7.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@playwright/test": "1.55.0",
    "@release-it/conventional-changelog": "10.0.1",
    "@storybook/addon-docs": "9.1.3",
    "@storybook/addon-links": "9.1.3",
    "@storybook/addon-onboarding": "9.1.3",
    "@storybook/nextjs": "9.1.3",
    "@types/js-cookie": "3.0.6",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-storybook": "9.1.3",
    "husky": "9.1.7",
    "hygen": "6.2.11",
    "is-ci": "4.1.0",
    "prettier": "3.6.2",
    "release-it": "19.0.4",
    "storybook": "9.1.3"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            }
          ]
        }
      }
    }
  },
  "overrides": {
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8"
  }
}
